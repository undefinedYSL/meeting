<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        layout="@layout/toolbar_title"
        android:id="@+id/toolbar11">

    </include>

    <ScrollView
        android:id="@+id/sv_boardroom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_boardroomname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:counterEnabled="true"
                app:counterMaxLength="10">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/et_boardroomname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入会议室名称" />


            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_boardroomsite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                app:counterEnabled="true"
                app:counterMaxLength="40">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/et_boardroomsite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入会议室地点" />


            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_boardroomconfiguration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                app:counterEnabled="true"
                app:counterMaxLength="50">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/et_boardroomconfiguration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入会议室配置" />


            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_boardroomcapacity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                app:counterEnabled="true"
                app:counterMaxLength="3">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/et_boardroomcapacity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:hint="请输入会议室最大可容纳人数" />


            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_boardroomtelephone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                app:counterEnabled="true"
                app:counterMaxLength="11">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/et_boardroomtelephone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:hint="请输入会议室电话" />


            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_boardroomremark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                app:counterEnabled="true"
                app:counterMaxLength="200">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/et_boardroomremark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入备注" />


            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/btn_submitboardroom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="25dp"
                android:background="@color/colorsubmit"
                android:onClick="click"
                android:text="提交"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

    </ScrollView>



</LinearLayout>
